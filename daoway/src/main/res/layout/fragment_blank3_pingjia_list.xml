<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >
  <ImageView
      android:id="@+id/pingjia_list_image"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:src="@mipmap/ic_launcher"
      android:scaleType="centerCrop"
      />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        >
       <TextView
           android:id="@+id/pingjia_list_text"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="木可习习(ʘ̆ʚʘ̆)"
           android:textColor="#000000"
           />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
        <RatingBar
            android:id="@+id/pingjia_list_ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:ratingBarStyleSmall"
            android:rating="5"
            />
            <TextView
                android:id="@+id/pingjia_list_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-09-12"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/pingjia_list_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="认真负责 把厨房的陈年油污打扫得很干净"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            />
        <com.android.graduate.daoway.widget.MyGridView
            android:id="@+id/MyGridView_pingjia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="4"
            android:horizontalSpacing="10dp"
            android:verticalSpacing="10dp"
            >
        </com.android.graduate.daoway.widget.MyGridView>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_comment_buy"
        />
</LinearLayout>