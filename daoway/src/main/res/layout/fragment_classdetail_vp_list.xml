<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    >
  <ImageView
      android:id="@+id/vpFragment_list_image_show"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:src="@mipmap/ic_launcher"
      android:scaleType="fitXY"
      />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"

            >
      <TextView
          android:id="@+id/vpFragment_list_name_show"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:text="家庭保洁"
          android:textColor="#000000"
          android:layout_gravity="center_vertical"
          />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="最快上门"
                android:textSize="10sp"
                android:textColor="#ffffff"
                android:background="@drawable/shape_text"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/vpFragment_list_shangmen_show"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="3小时"
                android:textSize="10sp"
                android:textColor="@color/color_checked_Red"
                android:background="@drawable/shape_text1"
                android:gravity="center"
                />
        </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/vpFragment_list_content_show"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="2小时起订，不足半小时按半小时计算，阿姨上门不携带清洁设备。超时按照原价结算，可以直接付款给给阿姨。"
            android:lines="1"
            android:singleLine="true"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            />
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:gravity="center_vertical"
           >
        <TextView
           android:id="@+id/vpFragment_list_text_show"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="30"
           android:textColor="@color/color_checked_Red"
           />
           <TextView
               android:id="@+id/vpFragment_list_text_show1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="元/小时"
               android:textSize="10sp"
               android:layout_toRightOf="@id/vpFragment_list_text_show"
               android:textColor="@color/color_checked_Red"
               android:layout_alignBottom="@id/vpFragment_list_text_show"
               />
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@id/vpFragment_list_text_show1"
           android:layout_alignBottom="@id/vpFragment_list_text_show"
           >
        <TextView
            android:id="@+id/vpFragment_list_zhen_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥40"
            android:textSize="10sp"
            android:layout_marginLeft="3dp"
            />
           <View
               android:layout_width="25dp"
               android:layout_height="1dp"
               android:layout_marginLeft="3dp"
               android:layout_centerVertical="true"
               android:background="@color/yanyan"

               />
       </RelativeLayout>

       </RelativeLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1"
         android:orientation="horizontal"
         android:gravity="center_vertical"
         >
         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/img_goods_item_store"
             />
          <TextView
              android:id="@+id/vpFragment_list_title_show"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:text="云家政"
              android:textSize="10sp"
              android:layout_marginLeft="5dp"
              />
           <TextView
               android:id="@+id/vpFragment_list_num_show"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="已售13246"
               android:layout_marginRight="10dp"
               android:textSize="10sp"
               />
           <TextView
               android:id="@+id/vpFragment_list_CommentRate_show"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="好评86%"
               android:textSize="10sp"
               />
     </LinearLayout>
    </LinearLayout>






</LinearLayout>