<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.graduate.daoway.start.ClassDetailActivity">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="?android:actionBarSize"
      android:paddingLeft="10dp"
      android:paddingRight="10dp"
      >
   <ImageView
       android:id="@+id/ClassDetail_image"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/btn_left_back_1"
       android:layout_centerVertical="true"
       />
     <RadioGroup
         android:id="@+id/ClassDetail_rg"
         android:orientation="horizontal"
         android:layout_width="150dp"
         android:layout_height="?android:actionBarSize"
         android:layout_centerInParent="true"
         android:gravity="center"
         android:checkedButton="@+id/ClassDetail_rbt"
         >
        <RadioButton
            android:id="@id/ClassDetail_rbt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="热门"
            android:textColor="@color/slt_class_text"
            android:button="@null"
            android:background="@drawable/slt_bt"
            android:padding="10dp"
            android:gravity="center"
            />
          <RadioButton
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:text="商家"
              android:textColor="@color/slt_class_text"
              android:button="@null"
              android:background="@drawable/slt_bt1"
              android:padding="10dp"
              android:gravity="center"
              />
     </RadioGroup>

      <ImageView
          android:id="@+id/ClassDetail_search"
          android:layout_centerVertical="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:src="@drawable/btn_title_search"
          />
  </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/yanyan"/>
    <FrameLayout
        android:id="@+id/ClassDetail_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</LinearLayout>
