<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="230dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        >
        <View
            android:id="@+id/item_home_label_view"
            android:layout_width="4dp"
            android:layout_height="15dp"
            android:background="@color/color_home_label_other"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:id="@+id/item_home_name_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="维修"
            android:textSize="15sp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/item_home_more_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"
            android:textSize="13sp"
            android:drawableRight="@drawable/img_right_small_arraw"
            android:layout_marginRight="3dp"
            />
    </LinearLayout>
   <com.android.graduate.daoway.widget.MyGridView
       android:id="@+id/item_home_gridView"
       android:layout_width="match_parent"
       android:layout_height="150dp"
       android:numColumns="3"
       android:horizontalSpacing="6dp"
       android:layout_marginRight="6dp"
       android:layout_marginLeft="6dp"
       android:layout_marginBottom="5dp"
       />
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/divider"
        />
</LinearLayout>