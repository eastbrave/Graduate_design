<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="horizontal"
       android:gravity="center_vertical"
       android:background="@color/white"
       android:padding="10dp"
       >
    <ImageView
        android:id="@+id/item_shop_list_icon_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/img_pic_default"
        android:scaleType="fitXY"
        android:layout_marginRight="10dp"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/item_shop_list_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="绒面磨砂鞋翻新改色"
            android:layout_marginBottom="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="5dp"
            >
            <TextView
                android:id="@+id/item_shop_list_desc_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="皮悦奢侈品好好好好好好好好好好好好好好好好好好好好好好好好好好好好好好好好"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="11sp"
                android:layout_marginRight="10dp"
                />
            <ImageView
                android:id="@+id/item_shop_list_reduce_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/takeout_bg_btn_reduce"
                />
            <TextView
                android:id="@+id/item_shop_list_select_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="1"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                />
            <ImageView
                android:id="@+id/item_shop_list_add_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/takeout_bg_btn_increase_focus"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="5dp"
            >
            <TextView
                android:id="@+id/item_shop_list_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="328"
                android:textSize="18sp"
                android:textColor="@color/color_Red"
                />
            <TextView
                android:id="@+id/item_shop_list_price_unit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元/件"
                android:textSize="15sp"
                android:textColor="@color/color_Red"
                android:layout_marginRight="10dp"
                />
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/item_shop_list_price_original_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="168元"
                    android:textSize="14sp"
                    />
                <View
                    android:layout_width="38dp"
                    android:layout_height="1dp"
                    android:background="@color/color_normal_gray"
                   android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/item_shop_list_sale_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已售0"
                android:textSize="12sp"
                />

        </LinearLayout>
    </LinearLayout>
   </LinearLayout>
</RelativeLayout>