<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.graduate.daoway.start.MapActivity">
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="?android:actionBarSize"
     android:orientation="horizontal"

     >
  <TextView
      android:id="@+id/map_city"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="武汉"
      android:drawableRight="@drawable/arraw_down"
     android:gravity="center"
      android:layout_marginLeft="5dp"
      android:layout_gravity="center_vertical"
      />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:background="@drawable/shape_search"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        >
     <ImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/home_img_search_gray"
         />
     <TextView
         android:id="@+id/map_search"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="搜索小区"
         />
    </LinearLayout>
     <TextView
         android:id="@+id/map_cancel"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="取消"
         android:textColor="@color/color_checked_Red"
         android:layout_gravity="center_vertical"

         android:layout_marginRight="5dp"
         />
 </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">
    <com.baidu.mapapi.map.TextureMapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        >
    </com.baidu.mapapi.map.TextureMapView>
     <!--   <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/map_state_edit_icon"
        android:layout_centerInParent="true"
        />-->
        <TextView
            android:id="@+id/map_text_myshow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的位置"
            android:textColor="@color/color_checked_Red"
            android:drawableTop="@drawable/btn_location"
            android:drawablePadding="3dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="附近小区"
        />
 <ListView
     android:id="@+id/map_list"
     android:layout_width="match_parent"
     android:layout_height="match_parent"></ListView>

</LinearLayout>
