<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.android.graduate.daoway.b_category.ClassDetailFirstFragment">
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <android.support.design.widget.TabLayout
        android:id="@+id/ClassDetail_first_tab"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/color_checked_Red"
        app:tabTextColor="#000000"
        app:tabIndicatorColor="@color/color_checked_Red"
        app:tabIndicatorHeight="3dp"

        />
        <ImageView
            android:id="@+id/ClassDetail_first_image"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/me_arrow"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
     <android.support.v4.view.ViewPager
         android:id="@+id/ClassDetail_first_vp"
         android:layout_width="match_parent"
         android:layout_height="match_parent">
     </android.support.v4.view.ViewPager>
</LinearLayout>
