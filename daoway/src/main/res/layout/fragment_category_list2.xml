<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
    <TextView
        android:id="@+id/category_list2_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="热门"
        android:textColor="#000000"
        />
       <TextView
           android:id="@+id/category_list2_text1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:drawableLeft="@drawable/img_category_rankings"
           android:text="排行榜"
           android:drawableRight="@drawable/btn_arrow_right_gray_feileitiao"
           android:layout_alignParentRight="true"
           android:drawablePadding="2dp"
           />
   </RelativeLayout>
    <com.android.graduate.daoway.widget.MyGridView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/category_list2_myGridView"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3"
        >
    </com.android.graduate.daoway.widget.MyGridView>
</LinearLayout>